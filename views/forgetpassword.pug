extends base

block content
  main.main
    .forget-password-form
      h2.heading-secondary.ma-bt-lg Forget password
      form.form.form--forget-password
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          button#btn-send.btn.btn--green Send reset password link