extends ../base

mixin navItem(link, text, icon, active)
  li(class=`${active ? 'side-nav--active' : ''}`)
    a(href=`${link}`)
      svg
        use(xlink:href=`img/icons.svg#icon-${icon}`)
      | #{text}

block content
  main.main
    .user-view
      nav.user-view__menu
        ul.side-nav
          +navItem('#', 'Settings', 'settings')
          +navItem('/my-tours', 'My bookings', 'briefcase')
          +navItem('#', 'My reviews', 'star')
          +navItem('#', 'Billing', 'credit-card')

        - if (user.role === 'admin')
          .admin-nav
            h5.admin-nav__heading Admin
            ul.side-nav
              +navItem('#', 'Manage tours', 'map')
              +navItem('#', 'Manage users', 'users', true)
              +navItem('#', 'Manage reviews', 'star')
              +navItem('#', 'Manage bookings', 'briefcase')

      .user-view__content
        .user-view__form-container
          .div(style="text-align:center;")
            h2.heading-secondary.ma-bt-md New user
          
          form.form.form-user-add-data
            .form__group
              label.form__label(for='name') Name
              input#name.form__input(type='text', required, name='name')
            .form__group.ma-bt-md
              label.form__label(for='email') Email address
              input#email.form__input(type='email', required, name='email')
            .form__group.form__photo-upload
              img.form__user-photo(src=`/img/users/${user.photo}`, alt='User photo')
              input.form__upload(type='file', accept='image/*', id='photo', name='photo')
              label(for='photo') Choose new photo
            .form__group
                label.form__label(for='role') Role
                label.label-radio-button
                    input.radio-button(type='radio' name='role' value='user' id='user' checked)
                    | User
                label.label-radio-button
                    input.radio-button(type='radio' name='role' id='guide' value='guide')
                    | Guide
                label.label-radio-button
                    input.radio-button(type='radio' name='role' id='lead-guide' value='lead-guide')
                    | Lead Guide
                label.label-radio-button
                    input.radio-button(type='radio' name='role' id='admin' value='admin')
                    | Admin
            .form__group
                label.form__label(for='status') Status
                label.label-radio-button
                    input.radio-button(type='radio' name='status' id='active' value='active' checked)
                    | Active
                label.label-radio-button
                    input.radio-button(type='radio' name='status' id='inactive' value='inactive')
                    | Inactive

            .form__group.right
              button.btn.btn--small.btn--green Save