extends base

block content
    section.section-lander
        .lander__hero
            .lander__hero-overlay &nbsp;
            img.lander__hero-img(src='/img/landing_image_6.jpg', alt='Landing')

        .landing-box(style='text-align:left')
            .landing-box__group
                .landing-box__detail
                    span.landing-box__text= 'SPEND YOUR HOLIDAY WITH US THROUGH'
