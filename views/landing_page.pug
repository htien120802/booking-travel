                span= 'NEW ADVENTURES'
            a(href = '/all-tours').landing-box__group__book
                .landing-box__detail
                    span.landing-box__text= 'EXPLORE NOW'


    section.section-image 
        img.promote-image(src='/img/landing_image_5.jpg', alt='Landing')
